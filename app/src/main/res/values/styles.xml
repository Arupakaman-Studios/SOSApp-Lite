<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SOSApp.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.SOSApp.Toolbar" parent="Widget.MaterialComponents.Toolbar" >
        <item name="android:background">?colorPrimary</item>
        <item name="colorControlHighlight">?colorTextMain</item>
        <item name="colorControlNormal">?colorTextMain</item>
    </style>

    <style name="Theme.SOSApp.ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?colorTextMain</item>
        <item name="tint">?colorTextMain</item>
    </style>

    <style name="Theme.SOSApp.ActionOverflowStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?colorPrimary</item>
    </style>

    <!-- Theme: AppBar -->
    <style name="Theme.SOSApp.AppBarLayout" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Customize the AppBarLayout -->
        <!--<item name="android:background">?colorPrimary</item>-->
        <item name="android:textColorPrimary">?colorTextMain</item>
        <item name="android:textColorSecondary">?colorTextMain</item>
        <item name="actionMenuTextColor">?colorTextMain</item>
    </style>

    <style name="Theme.SOSApp.TitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?colorTextMain</item>
    </style>

    <style name="Theme.SOSApp.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/selector_menu_item_color_state</item>
        <item name="itemTextColor">@color/selector_menu_item_color_state</item>
        <item name="android:background">?colorPrimaryVariant</item>
        <!--<item name="itemBackground">@drawable/selector_bottom_menu_background_color_state</item>-->
    </style>

    <!-- View Click Style-->
    <style name="Theme.SOSApp.ClickableWithinBorder">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.SOSApp.ClickableBorderLess">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.SOSApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>-->
        <!--<item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>-->
        <item name="boxBackgroundColor">?colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeColor">@color/selector_textinputlayout_box_stroke</item>
        <item name="boxStrokeErrorColor">@color/colorRedTheme</item>
        <item name="android:textColorHint">?colorTextMain</item>
        <item name="hintTextColor">?colorTextMain</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="android:theme">@style/Theme.SOSApp.TextInputLayoutTheme</item>
    </style>

    <style name="Theme.SOSApp.TextInputLayoutTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlNormal">?colorTextMain</item>
        <item name="colorControlHighlight">?colorTextMain</item>
        <item name="colorControlActivated">?colorTextMain</item>
    </style>

    <style name="Theme.SOSApp.TextInputEditTextRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">?colorTextMain</item>
        <item name="android:textColor">?colorTextMain</item>
    </style>


    <style name="Theme.SOSApp.ShapeAppearanceTopRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
    </style>

    <style name="Theme.SOSApp.Scrollbar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/bg_scrollbar_thumb</item>
        <!--<item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>-->
        <item name="android:scrollbarSize">8dp</item>
        <item name="android:scrollbarFadeDuration">800</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
    </style>


    <style name="Theme.SOSApp.AlertDialogMaterialTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">?colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Alert.TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Alert.BodyTextStyle</item>
        <item name="shapeAppearanceOverlay">@style/Alert.ShapeAppearanceOverlay.Dialog.Rounded</item>
    </style>

    <style name="Alert.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>
    <style name="Alert.BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.OutlinedButton">  <!-- parent="Widget.MaterialComponents.Button.UnelevatedButton"-->
        <!--<item name="android:fillColor">@color/colorTransparent</item>-->
        <item name="android:textColor">?colorTextMain</item>
        <item name="strokeColor">@color/colorTransparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">?colorPrimaryVariant</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorTransparent</item>
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="rippleColor">?colorPrimaryVariant</item>
    </style>

    <style name="Alert.ShapeAppearanceOverlay.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>