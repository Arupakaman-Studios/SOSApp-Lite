<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="bSelected"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnSelect"
            android:id="@+id/swipeRefreshLayout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvContacts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_contact_layout"
                    tools:itemCount="4"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvContactsError"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:text="@string/err_msg_no_contacts"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginVertical="20dp"
                    android:textColor="?colorTextMain"
                    android:textSize="@dimen/text_size_h4"
                    />

                <com.turingtechnologies.materialscrollbar.TouchScrollBar
                    android:id="@+id/touchScrollBar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    app:msb_lightOnTouch="false"
                    app:msb_recyclerView="@id/rvContacts"/>

            </RelativeLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnSelect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{@string/action_select + ` (`+ bSelected + `)`}"
            tools:text="@string/action_select"
            android:insetTop="@dimen/dp_zero"
            android:insetBottom="@dimen/dp_zero"
            app:shapeAppearance="@style/Theme.SOSApp.ShapeAppearanceTopRadius"
            app:backgroundTint="?colorTextMain"
            android:textColor="?colorTextPrimary"
            android:textSize="@dimen/buttonTextSizeSmall"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"
            android:textAllCaps="false"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>