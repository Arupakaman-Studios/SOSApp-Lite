<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshLayout"
        >
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingHorizontal="@dimen/defaultScreenPadding">

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/tvMoreAppsMsg"
               android:text="@string/msg_more_apps_arupakaman"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:gravity="center"
               android:layout_marginTop="@dimen/defaultScreenPadding"
               android:textColor="?colorTextMain"
               android:textSize="@dimen/text_size_h4"
               />

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rvMoreApps"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               tools:visibility="visible"
               app:layout_constraintTop_toBottomOf="@id/tvMoreAppsMsg"
               app:layout_constraintBottom_toBottomOf="parent"
               android:paddingVertical="@dimen/defaultScreenPadding"
               android:layout_marginTop="4dp"
               app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
               app:spanCount="2"
               android:clipToPadding="false"
               tools:listitem="@layout/item_arupakaman_app_layout"
               tools:itemCount="4"
               />

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/tvMoreAppsError"
               tools:visibility="visible"
               android:visibility="gone"
               android:text="@string/err_msg_general"
               app:layout_constraintTop_toBottomOf="@id/tvMoreAppsMsg"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:gravity="center"
               android:layout_marginVertical="20dp"
               android:textColor="?colorTextMain"
               android:textSize="@dimen/text_size_h4"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>